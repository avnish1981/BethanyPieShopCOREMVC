@*@model IEnumerable<BethanyPieShop.Models.Pie>*@
@model PiesListViewModel

@{
    ViewData["Title"] = "Pie List";
}

<h2>Bethany's Pie Shop</h2>
@*<h3>@ViewBag.Currentcategory </h3>*@
<h3>@Model.Currency  </h3>

@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Pie" asp-action="Deatils">@pie.Name</a>
                </h3>
                <p>@pie.ShortDescription</p>
            </div>
        </div>
    </div>
}



